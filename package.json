{
  "name": "ccma",
  "version": "1.0.2",
  "description": "Claude Code Manager - A CLI tool to manage multiple Claude Code configurations and API endpoints.",
  "description_zh": "Claude Code Manager - 一个 CLI 工具，用于管理多个 Claude Code 配置 URL 和 API。",
  "main": "dist/index.js",
  "bin": {
    "ccma": "dist/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "pre-publish": "npm run build",
    "post-version": "git add package.json && git commit -m \"chore: bump version\"",
    "publish:patch": "npm run pre-publish && npm run version:patch && npm run post-version && npm publish",
    "publish:minor": "npm run pre-publish && npm run version:minor && npm run post-version && npm publish",
    "publish:major": "npm run pre-publish && npm run version:major && npm run post-version && npm publish",
    "publish": "npm run publish:patch",
    "publish:dry": "npm run pre-publish && npm pack"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "cli",
    "configuration",
    "manager",
    "ccma",
    "api",
    "endpoint"
  ],
  "author": {
    "name": "zoeblow",
    "url": "https://github.com/zoeblow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoeblow/ccma.git"
  },
  "bugs": {
    "url": "https://github.com/zoeblow/ccma/issues"
  },
  "homepage": "https://github.com/zoeblow/ccma#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
